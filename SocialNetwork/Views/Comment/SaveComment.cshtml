@using SocialNetwork.Core.Application.ViewModels.Comments
@model SaveCommentViewModel

@{
    ViewData["Title"] = "Add a comment";
}

<div class="container-fluid">

    <div class="row mt-5">
        <div class="col-6 offset-3">
            <div class="card shadow-sm">
                <div class="card-header bg-dark">
                    <h4 class="text-light">Comment</h4>
                </div>
                <div class="card-body">
                    
                    <form method="post" asp-controller="Comment" asp-action="Create">
                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Your Comment:</label>
                            <textarea class="form-control" asp-for="Description"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <input type="hidden" asp-for="PostId"></input>
                        <input type="hidden" asp-for="CreatedBy"></input>

                        <a asp-controller="Post" asp-action="Index" class="btn btn-warning">Go back</a>
                        <button type="submit" class="btn btn-primary float-end me-2">Post</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>