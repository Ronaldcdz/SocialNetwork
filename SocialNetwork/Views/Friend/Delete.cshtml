@using SocialNetwork.Core.Application.ViewModels.Friends;
@model SaveFriendViewModel
@{
    ViewData["Title"] = "Delete Post";
}

<div class="row">

    <div class="col-6 offset-3">
        <div class="card">
            <div class="card-header bg-danger text-light">
                <h4>Are you sure that you want to delete this added friend '@Model.Username'? </h4>
            </div>
            <div class="card-body">

                <form method="post" asp-controller="Friend" asp-action="DeletePost">

                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="UserId" />
                    <input type="hidden" asp-for="FriendId" />
                    <input type="hidden" asp-for="CreatedBy" />

                    <a asp-controller="Friend" asp-action="Index" class="btn btn-warning">Cancel</a>
                    <button type="submit" class="btn btn-danger">Delete</button>

                </form>

            </div>
        </div>
    </div>

</div>

